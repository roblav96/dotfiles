{
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "ignore",
	"jsxBracketSameLine": false,
	"jsxSingleQuote": false,
	"printWidth": 100,
	"proseWrap": "never",
	"quoteProps": "consistent",
	"semi": false,
	"singleQuote": true,
	"tabWidth": 4,
	"trailingComma": "all",
	"useTabs": true,
	"overrides": [
		{
			"files": ["*.html"],
			"options": { "singleQuote": false }
		},
		{
			"files": ["*.tmLanguage", "*.tmTheme"],
			"options": { "parser": "xml", "printWidth": 999999 }
		},
		{
			"files": ["h2o.conf", "*.yml", "*.yaml", "*.sublime-syntax"],
			"options": { "tabWidth": 2, "useTabs": false }
		},
		{
			"files": ["*.less"],
			"options": { "parser": "less" }
		},
		{
			"files": ["*.sass", "*.scss"],
			"options": { "parser": "scss" }
		},
		{
			"files": ["*.plist", "*.svg", "*.xml"],
			"options": { "parser": "xml" }
		},
		{
			"files": ["*.toml"],
			"options": { "parser": "toml" }
		}
	]
}
